<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/buttonUserAction"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/buttonUserAction"
        android:background="@drawable/ic_list_players_bacground"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowRadius="10"
        android:text="@string/app_name"
        android:textColor="#FFEB3B"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonUserAction"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/gold_black_button"
        android:insetLeft="2dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:backgroundTint="@null"

        tools:ignore="SpeakableTextPresentCheck" />
</RelativeLayout>
