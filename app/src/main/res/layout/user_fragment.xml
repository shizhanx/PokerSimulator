<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/buttonUserAction"
        android:layout_alignParentStart="true"
        android:layout_marginRight="7dp"
        android:layout_toStartOf="@id/buttonUserAction"
        android:background="@drawable/ic_list_players_bacground"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowRadius="10"
        android:textColor="#FFEB3B"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonUserAction"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/gold_black_button"
        app:backgroundTint="@null"
        android:insetLeft="2dp"
        android:insetTop="1dp"
        android:insetRight="1dp"
        android:insetBottom="1dp"
        android:textSize="11dp"
        android:textColor="@color/white"

        />
</RelativeLayout>
