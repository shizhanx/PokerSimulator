<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomFragment">

    <TextView
        android:id="@+id/textview_room_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODO: a list of joined players including yourself"
        app:layout_constraintBottom_toTopOf="@id/button_prepare_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_prepare_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prepare_to_start_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_room_header" />
</androidx.constraintlayout.widget.ConstraintLayout>